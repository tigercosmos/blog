.header 
  text-align: center
  h1, h2 
    margin: 0
    line-height: 1.2
  .title 
    a
      color: var(--accent-color)
      text-decoration: none
      font: 700 3rem BLOG
      transition: .3s
      &:hover
        color: var(--text-light)
    
  .desc
      margin:.5em 0 .25em
      font: 18px BLOG
      color: var(--text-light)

  .links 
    height: 40px
    margin: 2.25em auto 4.5em
    border-top: 1px dashed var(--border-color)
    border-bottom: 1px dashed var(--border-color)
    font: 700 13px Lato-Bold
    text-transform: uppercase
    letter-spacing: 1px
    ul 
      text-decoration: none
      padding: 0
      li
        display: inline-block
        &::after
          content: "\00B7"
          margin: 0 .75em
        &:last-child::after 
          content: ''
        a
          color: var(--text-color)
          text-decoration: none
          transition: .3s
          &:hover
            color: var(--accent-color)
  
  .ipad-menu
    display: none
    position: fixed
    top: 4em
    left: -1px

  .mobile-menu
    display: none
    position: fixed
    top: 0
    left: 0
    width: calc(100% - 3em)
    padding: 0 1.5em
    height: 3em
    z-index: 1
    box-shadow: 0px 1px 5px var(--border-color)
    h3
      a
        color: var(--accent-color)
        text-decoration: none
        font: 700 1.6rem Lora-Bold
        text-shadow: 1px 1px var(--container-bg), 2px 2px var(--accent-color)
        &:hover
          color: var(--text-light)

  .menu
    padding: .5em 1em
    border: 1px dashed var(--container-bg)
    outline: 5px solid var(--text-light)
    background: var(--text-light)
    font: 700 14px Lato-Bold
    color: #fff
    text-transform: upperCase
          
    &::before 
      content: ''
      background: url('https://cdn.jsdelivr.net/gh/frontendsophie/hexo-theme-autumn@1.0.0/source/img/menu.svg')
      display: inline-block
      width: 16px
      height: 16px
      margin-right: 3px
      vertical-align: -3px

    &:focus, &:active
      background: var(--accent-color)
      outline: 3px solid var(--accent-color)

@media screen and (max-width: 1015px)
  .header
    .ipad-menu
      display: block

@media screen and (max-width: 640px) 
  .header 
    .title 
      a
        font-size: 2.5rem

    .ipad-menu
      display: none

    .mobile-menu 
      display: flex
      justify-content: space-between
      align-items: center
      .menu
        padding: .2em .5em
        font: 700 12px Lato-Bold
        outline: 3px solid var(--text-light)

      
      
