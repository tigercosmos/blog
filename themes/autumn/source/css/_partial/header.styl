.header 
  text-align: center
  h1, h2 
    margin: 0
    line-height: 1.2
  .title 
    a
      color: var(--accent-color)
      text-decoration: none
      font: 700 3rem BLOG
      transition: .3s
      &:hover
        color: var(--text-light)
    
  .desc
      margin:.5em 0 .25em
      font: 18px BLOG
      color: var(--text-light)

  .links 
    height: 40px
    margin: 2.25em auto 4.5em
    border-top: 1px dashed var(--border-color)
    border-bottom: 1px dashed var(--border-color)
    font: 700 13px Lato-Bold
    text-transform: uppercase
    letter-spacing: 1px
    ul 
      text-decoration: none
      padding: 0
      li
        display: inline-block
        &::after
          content: "\00B7"
          margin: 0 .75em
        &:last-child::after 
          content: ''
        &.translation-switcher
          position: relative
          display: inline-flex
          align-items: center
          .translation-button
            display: inline-flex
            align-items: center
            justify-content: center
            gap: .35em
            min-width: 28px
            height: 28px
            border: 1px solid transparent
            background: transparent
            padding: 0
            margin: 0
            cursor: pointer
            color: var(--text-light)
            transition: .3s
            svg
              width: 16px
              height: 16px
              fill: currentColor
            .translation-current
              font-size: 11px
              letter-spacing: .6px
              text-transform: uppercase
              color: var(--text-light)
            &:hover
              color: var(--accent-color)
              .translation-current
                color: var(--accent-color)
            &:focus-visible
              outline: 2px solid var(--accent-color)
              outline-offset: 2px
          .translation-menu
            display: none
            position: absolute
            top: 100%
            right: 0
            margin: .5em 0 0
            padding: .4em 0
            list-style: none
            background: var(--container-bg)
            border: 1px solid var(--border-color)
            border-radius: 6px
            box-shadow: 0 10px 30px rgba(0,0,0,.12)
            min-width: 90px
            z-index: 5
            li
              display: block
              padding: 0
              &::after
                content: ''
                margin: 0
          &:hover .translation-menu
            display: block
          &:focus-within .translation-menu
            display: block
          .translation-lang
            display: block
            padding: .35em .8em
            text-decoration: none
            color: var(--text-color)
            text-transform: uppercase
            font-size: 12px
            letter-spacing: .5px
            &.is-current
              color: var(--accent-color)
              font-weight: 700
            &:hover
              color: var(--accent-color)
        a
          color: var(--text-color)
          text-decoration: none
          transition: .3s
          &:hover
            color: var(--accent-color)
  
  .ipad-menu
    display: none
    position: fixed
    top: 4em
    left: -1px

  .mobile-menu
    display: none
    position: fixed
    top: 0
    left: 0
    width: calc(100% - 3em)
    padding: 0 1.5em
    height: 3em
    z-index: 1
    box-shadow: 0px 1px 5px var(--border-color)
    h3
      a
        color: var(--accent-color)
        text-decoration: none
        font: 700 1.6rem Lora-Bold
        text-shadow: 1px 1px var(--container-bg), 2px 2px var(--accent-color)
        &:hover
          color: var(--text-light)

  .menu
    padding: .5em 1em
    border: 1px dashed var(--container-bg)
    outline: 5px solid var(--text-light)
    background: var(--text-light)
    font: 700 14px Lato-Bold
    color: #fff
    text-transform: upperCase
          
    &::before 
      content: ''
      background: url('https://cdn.jsdelivr.net/gh/frontendsophie/hexo-theme-autumn@1.0.0/source/img/menu.svg')
      display: inline-block
      width: 16px
      height: 16px
      margin-right: 3px
      vertical-align: -3px

    &:focus, &:active
      background: var(--accent-color)
      outline: 3px solid var(--accent-color)

@media screen and (max-width: 1015px)
  .header
    .ipad-menu
      display: block

@media screen and (max-width: 640px) 
  .header 
    .title 
      a
        font-size: 2.5rem

    .ipad-menu
      display: none

    .mobile-menu 
      display: flex
      justify-content: space-between
      align-items: center
      .menu
        padding: .2em .5em
        font: 700 12px Lato-Bold
        outline: 3px solid var(--text-light)

      
      
