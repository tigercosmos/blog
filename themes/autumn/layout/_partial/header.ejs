<header class="header">
    <nav class="mobile-menu" style="background: <%- theme.background %>">
        <h3 class="invisibile">
            <a href="<%- url_for_lang('/', page.lang) %>" class="logo">
                <%= config.title %>
            </a>
        </h3>
        <button class="menu">menu</button>
    </nav>

    <button class="ipad-menu menu">menu</button>

    <h1 class="title" id="main-title">
        <a href="<%- url_for_lang('/', page.lang) %>" class="logo">
            <%= config.title %>
        </a>
    </h1>
    <h2 class="desc">
        <%= config.subtitle %>
    </h2>

    <div class="links">
        <ul>
            <% for (name in theme.social) { %>
            <li>
                <a href="<%- url_for(theme.social[name]) %>">
                    <%- name %>
                </a>
            </li>
            <% } %>
            <li>
                <a href="#" id="theme-toggle" onclick="toggleDarkMode()" title="Toggle dark mode">
                    ðŸŒ™
                </a>
            </li>
            <% const translationEntries = translation_entries(page); %>
            <% if (translationEntries.length > 1) { %>
            <li class="translation-switcher">
                <% const currentEntry = translationEntries.find(function (entry) { return entry.isCurrent; }) || translationEntries[0]; %>
                <button class="translation-button" type="button" aria-label="Translations" title="Translations">
                    <svg viewBox="0 0 24 24" role="img" aria-hidden="true" focusable="false">
                        <path d="M12 2a10 10 0 1 0 10 10A10.01 10.01 0 0 0 12 2Zm7.94 9h-3.15a15.46 15.46 0 0 0-1.31-5.04A8.03 8.03 0 0 1 19.94 11ZM12 4.08A13.4 13.4 0 0 1 13.89 11H10.1A13.4 13.4 0 0 1 12 4.08ZM4.06 13h3.15a15.46 15.46 0 0 0 1.31 5.04A8.03 8.03 0 0 1 4.06 13ZM7.21 11H4.06A8.03 8.03 0 0 1 8.52 5.96 15.46 15.46 0 0 0 7.21 11ZM12 19.92A13.4 13.4 0 0 1 10.1 13h3.79A13.4 13.4 0 0 1 12 19.92ZM15.48 18.04A15.46 15.46 0 0 0 16.79 13h3.15A8.03 8.03 0 0 1 15.48 18.04ZM16.79 11a15.46 15.46 0 0 0-1.31-5.04A8.03 8.03 0 0 1 19.94 11Z"></path>
                    </svg>
                    <span class="translation-current" aria-hidden="true"><%= currentEntry.lang %></span>
                </button>
                <div class="translation-menu" aria-label="Translation menu">
                    <% translationEntries.forEach(function (entry) { %>
                        <% if (entry.isCurrent) { %>
                            <span class="translation-lang is-current" lang="<%= entry.lang %>"><%= entry.lang %></span>
                        <% } else { %>
                            <a class="translation-lang" href="<%- entry.path %>" hreflang="<%= entry.lang %>" lang="<%= entry.lang %>"><%= entry.lang %></a>
                        <% } %>
                    <% }) %>
                </div>
            </li>
            <% } %>
        </ul>
    </div>
</header>
