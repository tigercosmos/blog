<!DOCTYPE html>
<html lang="<%= config.language %>">
<%- partial('_partial/head') %>

<body style="background: <%- theme.background %>">
    <div class="container">
        <%- partial('_partial/header') %>
        <main class="main">
            <%- body %>
        </main>
        <aside class="aside">
            <div class="close"></div>
            <section class="aside-section">
                <%- partial('_widget/about') %>
            </section>
            <% if (page.content){%>
                <section class="aside-section">
                    <%- partial('_widget/toc') %>
                </section>
            <% } %>
            <section class="aside-section">
                <%- partial('_widget/recent') %>
            </section>
            <section class="aside-section">
                <%- partial('_widget/search') %>
            </section>
            <section class="aside-section">
                <%- partial('_widget/donation') %>
            </section>
            <section class="aside-section">
                <%- partial('_widget/archive') %>
            </section>
            <section class="aside-section tag">
                <%- partial('_widget/tag') %>
            </section>
        </aside>
    </div>
</body>

</html>